extends ../base.pug

block content
  h3 #{action} restaurant
  form(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="title") Title
      input.form-control(type="text", name="title", id="title", value=restaurant.name)
    .form-group
      label(for="author") Author
      input.form-control(type="text", name="author", id="author", value=restaurant.category)
    .form-group
      label(for="image") Cover Image
      input.form-control(type="file", name="image", id="image")
    .form-group.hidden
      label(for="imageUrl") Cover Image URL
      input.form-control(type="text", name="imageUrl", id="imageUrl", value=restaurant.imageUrl)
    //.form-group
    //  label(for="description") Description
    //  input.form-control(type="text", name="description", id="description", value=restaurant.description)
    .form-group
    button.btn.btn-success(type="submit") Save
