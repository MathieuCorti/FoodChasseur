doctype html
html(lang="en")
  head
    title Register
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css")
    link(rel="stylesheet", type="text/css", href="/styles/style.css")
  body
    #header
        font(color="#00AAA0", size="40") Food Hunter
        a(href="/restaurants", class='button1') Main Menu
    #sidebar
        .media
            .media-body
                h2= restaurant.name
                p= restaurant.category
                h5 By #{restaurant.contact||'unknown'}
                p= restaurant.description
        .btn-group
            a(href=`/restaurants/${restaurant.id}/edit`, class='btn btn-primary btn-sm')
                i.glyphicon.glyphicon-edit
                span  Edit restaurant
            | &nbsp;&nbsp;&nbsp;
            a(href=`/restaurants/${restaurant.id}/delete`, class='btn btn-danger btn-sm')
                i.glyphicon.glyphicon-trash
                span  Delete restaurant
    #content
        h3 Menu:
        img(src="https://megame73.files.wordpress.com/2012/11/menupro-restaurant-menu-design-samples-printed-menus-mozilla-firefox_2012-11-21_23-23-31.png", alt="Menu", style="width:304px;height:228px;")
